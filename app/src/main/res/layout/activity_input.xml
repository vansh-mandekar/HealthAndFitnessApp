<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp"
    tools:context=".InputActivity">

    <TextView
        android:id="@+id/siuu"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="ENTER YOUR DETAILS:"
        android:textColor="#ffc922"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/siuu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Height (in feet)"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textColorHint="#FFFFFF"
        android:inputType="numberDecimal"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/weightEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heightEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Weight (in kilograms)"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textColorHint="#FFFFFF"
        android:inputType="numberDecimal"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heightEditText"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:hint="age (in years)"
        android:inputType="numberDecimal"
        android:textColor="@android:color/white"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weightEditText"
        android:layout_marginTop="112dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#ffc922"
        android:gravity="center"
        android:text="CALCULATE"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

</RelativeLayout>